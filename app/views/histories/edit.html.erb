<h1>Histories#edit</h1>

<% form_for([@ticket, @history]) do |f| %>
  <%= f.error_messages %>
    <p>
      Ticket <%= f.label :ticket_id %>
    </p>
    <p> Associated Employee
    <% employees = Employee.find(:all)%>
    <%= f.collection_select(:employee_id, employees, :id, :name, :include_blank => true )%>
    </p>
    <p>
      <%= f.label :body %><br />
      <%= f. text_area :body %>
    </p>
    <p>
      <%= f.submit "Update" %>
    </p>
<% end %>  

<%= link_to 'Show', ticket_history_path(@ticket, @history) %> |
<%= link_to 'Back', ticket_histories_path(@ticket) %>

